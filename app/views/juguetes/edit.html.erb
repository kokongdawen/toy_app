<% provide(:title, 'Edit toy') %>
<h1>Update your toy</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@juguete) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Bigyan mo ng pangalan" %>
      </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :content, placeholder: "Lagyan mo ng laman" %>
      </div>
    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price, placeholder: "Bigyan mo ng halaga" %>
      </div>
    <%= f.submit "Okay na", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
